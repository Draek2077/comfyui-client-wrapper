<Window x:Class="ComfyUIClientWrapper.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="220" Width="320"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackgroundBrush}">
    
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
            <!-- App Icon (using a simple Path for a generic icon) -->
            <Path Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2ZM13,17H11V11H13V17ZM13,9H11V7H13V9Z" 
                  Fill="{DynamicResource TextBrush}" 
                  Width="48" 
                  Height="48" 
                  Stretch="Uniform" 
                  HorizontalAlignment="Center"/>
            
            <TextBlock Text="ComfyUI Client Wrapper"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"/>

            <TextBlock x:Name="VersionTextBlock"
                       Text="Version 1.0.0.0"
                       FontSize="12"
                       Foreground="{DynamicResource MutedTextBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,2,0,0"/>

            <Button Content="OK"
                    Click="OkButton_Click"
                    Width="80"
                    Margin="0,20,0,0"
                    Padding="8,4"/>
        </StackPanel>
    </Grid>
</Window>